	year = {2019},
	keywords = {Lizard, cold tolerance, heat tolerance, survival, Article, Cold Temperature, controlled study, Critical thermal limits, Thermal tolerance, Hot Temperature, Developmental plasticity, nonhuman, lizard, high temperature, body size, temperature sensitivity, hatchling, Heat wave, incubation temperature, incubation time},
